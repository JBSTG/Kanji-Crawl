<Application x:Class="XmlStorage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XmlStorage"
             xmlns:views="clr-namespace:XmlStorage.Views"
             xmlns:vm="clr-namespace:XmlStorage.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GameViewModel}">
            <views:GameView/>
        </DataTemplate>
    </Application.Resources>
</Application>
