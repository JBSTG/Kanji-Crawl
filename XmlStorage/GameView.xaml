<UserControl x:Class="XmlStorage.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XmlStorage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Visibility="Visible" IsEnabled="True"
             KeyboardNavigation.DirectionalNavigation="None" Loaded="SetFocus"  KeyDown="KeyTest" Focusable="True">
    <StackPanel>
        <Button Width="100" HorizontalAlignment="Left" Margin="10" Name="returnButton" Click="ReturnToMainMenu">Save and Quit</Button>
        <TextBlock FontSize="30" Name="target" Margin="10"></TextBlock>
        <TextBlock FontSize="30" Name="pastAccuracy" Margin="10"></TextBlock>
        <TextBlock FontSize="30" Name="correctOrNot" Margin="10">--</TextBlock>
    <Grid Name="Board" KeyboardNavigation.DirectionalNavigation="None"  Focusable="True" IsEnabled="True" >
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Label Name="diag"></Label>
    </Grid>
    </StackPanel>
</UserControl>
